@{
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

@model Demo_Project.Models.UserLoginModel

<main>
    <div class="container">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorMessage"]
            </div>
        }
        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                       

                        <div class="card shadow-lg rounded-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2 text-center">
                                    <h5 class="card-title fs-4">Login to Your Account</h5>
                                    <p class="text-muted small">Please enter your credentials.</p>
                                </div>

                                <form class="row g-3 needs-validation" asp-action="UserLogin" asp-controller="User" novalidate>
                                    <div class="col-12">
                                        <label for="yourUsername" class="form-label">Username</label>
                                        <input type="text" asp-for="UserName" class="form-control" id="yourUsername" required>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="yourPassword" class="form-label">Password</label>
                                        <input type="password" asp-for="Password" class="form-control" id="yourPassword" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit" >Login</button>
                                    </div>
                                    <div class="col-12 text-center">
                                        <p class="small mb-0">Don't have an account? <a asp-action="UserRegister" asp-controller="User">Create an account</a></p>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<!-- Custom CSS for styling -->
<style>
    .card {
        background: linear-gradient(145deg, #ffffff, #e6f7ff);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn-primary {
        background: linear-gradient(to right, #007bff, #0056b3);
        border: none;
    }

    .btn-primary:hover {
        background: linear-gradient(to right, #0056b3, #007bff);
        transition: background 0.3s ease;
    }
</style>
