@model Demo_Project.Models.ProductModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div class="card shadow-lg mx-auto" style="border-radius: 15px; background: linear-gradient(145deg, #fff, #e3f2fd); max-width: 700px; margin-top: 10px;">
    <div class="card-header text-white text-center" style="background: linear-gradient(to right, #8e44ad, #3498db); border-radius: 15px 15px 0 0; padding: 1.5rem;">
        <h4 class="mb-0 font-weight-bold">Add Product</h4>
    </div>
    <div class="card-body" style="padding: 1.5rem;">

        <!-- Form -->
        <form method="post" asp-action="ProductSave">
            <div class="row">
                <!-- Product Name -->
                <div class="form-group col-md-6 mb-3">
                    <input type="hidden" asp-for="ProductID" />
                    <label for="ProductName" class="form-label font-weight-bold text-dark">
                        <span class="text-danger">*</span> Product Name
                    </label>
                    <input type="text" class="form-control shadow-sm" asp-for="ProductName" placeholder="Enter product name" style="border-radius: 10px;">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <!-- Product Price -->
                <div class="form-group col-md-6 mb-3">
                    <label for="ProductPrice" class="form-label font-weight-bold text-dark">
                        <span class="text-danger">*</span> Product Price
                    </label>
                    <input type="number" class="form-control shadow-sm" asp-for="ProductPrice" placeholder="Enter product price" style="border-radius: 10px;">
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Product Code -->
                <div class="form-group col-md-6 mb-3">
                    <label for="ProductCode" class="form-label font-weight-bold text-dark">
                        <span class="text-danger">*</span> Product Code
                    </label>
                    <input type="text" class="form-control shadow-sm" asp-for="ProductCode" placeholder="Enter product code" style="border-radius: 10px;">
                    <span asp-validation-for="ProductCode" class="text-danger"></span>
                </div>

                <!-- User ID -->
                <div class="form-group col-md-6 mb-3">
                    <label for="UserID" class="form-label font-weight-bold text-dark">
                        <span class="text-danger">*</span> User ID
                    </label>
                    <select class="form-control shadow-sm" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))" style="border-radius: 10px;">
                        <option value="">Select User</option>
                    </select>
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
            </div>

            <!-- Description -->
            <div class="form-group mb-3">
                <label for="Description" class="form-label font-weight-bold text-dark">
                    <span class="text-danger">*</span> Product Description
                </label>
                <textarea class="form-control shadow-sm" asp-for="Description" placeholder="Enter product description" rows="3" style="border-radius: 10px;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Action Buttons -->
            <div class="form-group text-center">
                <a class="btn btn-sm btn-outline-danger shadow-sm mx-1" asp-controller="Product" asp-action="ProductList" style="border-radius: 8px; padding: 0.5rem 1.5rem;">Back</a>
                <button type="submit" class="btn btn-sm btn-gradient shadow-sm mx-1" style="border-radius: 8px; padding: 0.5rem 1.5rem; background: linear-gradient(to right, #f39c12, #e74c3c); color: white;" onclick="return confirm('Are you sure you want to save this product?');">Submit</button>
            </div>
        </form>
    </div>
</div>

<!-- Custom CSS for Compact Styling -->
<style>
    .form-control, .btn {
        transition: all 0.3s ease;
    }

        .form-control:focus {
            box-shadow: 0 4px 12px rgba(52, 152, 219, 0.2);
            border-color: #3498db;
        }

    .btn-gradient {
        background-color: #3498db;
        background-image: linear-gradient(to right, #f39c12, #e74c3c);
    }

        .btn-gradient:hover {
            background-image: linear-gradient(to right, #f39c12, #d35400);
        }

    .card {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    .btn:hover, .form-control:hover {
        transform: scale(1.02);
    }
</style>
